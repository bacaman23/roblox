-- Get the game and players
local game = game
local players = game:GetService("Players")

-- Function to check if an object is a player
local function isPlayer(object)
    for _, player in ipairs(players:GetPlayers()) do
        if player.Character == object then
            return true
        end
    end
    return false
end

-- Function to destroy scripts in an object
local function destroyScripts(object)
    if object:IsA("Script") or object:IsA("LocalScript") or object:IsA("ModuleScript") then
        object:Destroy()
    else
        for _, child in ipairs(object:GetChildren()) do
            destroyScripts(child)
        end
    end
end

-- Go through each object in the game
for _, service in ipairs(game:GetChildren()) do
    if service.Name ~= "Players" then
        for _, object in ipairs(service:GetChildren()) do
            -- If the object is not a player, destroy its scripts
            if not isPlayer(object) then
                destroyScripts(object)
            end
        end
    end
end
